.content{
	height: 300vh;
	display: flex;
}

.name{
	font-size: 30rpx;
	margin-top: -10rpx;
	word-break: keep-all;
	flex-wrap: wrap;
	flex-direction: column;
}

.right{
	margin-left: 3%;
	display: flex;
	/* justify-items: center; */
	/* flex-wrap: wrap; */
	flex-direction: column;
}

.detail{
	display: flex;
	margin-top: 5%;
	height: auto;
	border-bottom: 1px solid #ddd;
	position: relative;
	/* border-bottom-width: 2px;
	border-bottom: black; */
}

