<!--pages/map/map.wxml-->
<view style="width: 100%;height: 100%;">
<map
subkey="{{subKey}}"
style="width: 100%;height: 100%;"
longitude="{{longitude}}"
latitude="{{latitude}}"
show-location="{{showLocation}}"
enable-building="enablebuilding"
markers="{{marker}}"
bindmarkertap="handleMarkerTap"></map>
</view>



<mp-halfScreenDialog show="{{showDialog}}">
<view slot="title">{{currentmarker.name}}</view>
<view slot="desc" class="explain"><text style="color: rgb(31, 21, 9);font-size: 20px; font-weight: bolder;">{{currentmarker.detail}}</text></view>
<view slot="footer">
<button type="primary" class="weui-btn" bindtap="navi1" data-id="{{currentmarker.id}}">纪念打卡</button>
<button type="primary" class="weui-btn" bindtap="navi2" data-id="{{currentmarker.id}}">签到</button>
</view>
</mp-halfScreenDialog>